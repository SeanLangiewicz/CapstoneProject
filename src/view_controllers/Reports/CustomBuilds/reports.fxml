<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view_controllers.Reports.CustomBuilds.reportsController">
   <children>
      <AnchorPane prefHeight="600.0" prefWidth="800.0">
         <children>
            <VBox alignment="CENTER" layoutX="1.0" layoutY="38.0" prefHeight="390.0" prefWidth="800.0">
               <children>
                  <HBox alignment="CENTER" prefHeight="78.0" prefWidth="697.0">
                     <children>
                        <Label fx:id="dateTimeDisplayLbl" text="Today's Day and Date">
                           <HBox.margin>
                              <Insets right="20.0" />
                           </HBox.margin>
                        </Label>
                        <Label fx:id="dateTimeLbl" prefHeight="33.0" prefWidth="204.0" text="Label" />
                     </children>
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                  </HBox>
                  <Label fx:id="salesLbl" alignment="CENTER" contentDisplay="CENTER" prefHeight="53.0" prefWidth="462.0" text="Total Sales" />
                  <TableView fx:id="reportsTbl" prefHeight="270.0" prefWidth="747.0">
                    <columns>
                      <TableColumn fx:id="caseTC" prefWidth="75.0" text="Case" />
                      <TableColumn fx:id="graphicsTC" prefWidth="75.0" text="Graphics Card" />
                        <TableColumn fx:id="motherboardTC" prefWidth="75.0" text="Motherboard" />
                        <TableColumn fx:id="powerSupplyTC" prefWidth="104.0" text="Power Supply" />
                        <TableColumn fx:id="processorTC" prefWidth="120.0" text="Processor" />
                        <TableColumn fx:id="ramTC" prefWidth="118.0" text="RAM" />
                        <TableColumn fx:id="priceTC" prefWidth="107.0" text="Total Price" />
                        <TableColumn fx:id="dateTC" prefWidth="125.0" text="Date Sold" />
                    </columns>
                  </TableView>
                  <Button fx:id="reportBtn" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#onActionGetReport" prefHeight="54.0" prefWidth="142.0" text="Get Report" />
               </children>
            </VBox>
            <HBox layoutX="14.0" layoutY="514.0" prefHeight="66.0" prefWidth="114.0">
               <children>
                  <Button fx:id="backBtn" mnemonicParsing="false" onAction="#onActionBackBtn" prefHeight="65.0" prefWidth="118.0" text="Back" />
               </children>
            </HBox>
            <VBox alignment="CENTER" layoutX="250.0" layoutY="426.0" prefHeight="53.0" prefWidth="316.0" />
            <VBox alignment="CENTER" layoutX="386.0" layoutY="479.0" prefHeight="102.0" prefWidth="180.0">
               <children>
                  <Label alignment="CENTER" prefHeight="35.0" prefWidth="182.0" text="Select Time Period" />
                  <ComboBox fx:id="timePeriodCboBx" onAction="#onActionSelectTimePeriod" prefWidth="150.0" />
               </children>
            </VBox>
            <VBox alignment="CENTER" layoutX="206.0" layoutY="479.0" prefHeight="102.0" prefWidth="180.0">
               <children>
                  <Label alignment="CENTER" prefHeight="35.0" prefWidth="182.0" text="Select Employee" />
                  <ComboBox fx:id="selectEmployCbBx" onAction="#onActionSelectionEmployee" prefWidth="150.0" />
               </children>
            </VBox>
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
