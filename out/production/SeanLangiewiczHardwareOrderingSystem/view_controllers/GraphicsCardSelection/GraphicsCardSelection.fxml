            </TableView>
            <Button fx:id="viewDetailsBtn" alignment="CENTER" layoutX="215.0" layoutY="221.0" mnemonicParsing="false" onAction="#onActionViewDetailsBtn" prefHeight="71.0" prefWidth="306.0" text="View Details" />
